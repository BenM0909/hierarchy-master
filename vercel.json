{
    "version": 2,
    "builds": [
        { "src": "api/**/*.js", "use": "@vercel/node" },
        { "src": "index.html", "use": "@vercel/static" }
    ],
    "functions": {
        "api/create-files.js": {
            "runtime": "@vercel/node",
            "includeFiles": ["**/*", "**/.*"]
        }
    },
    "routes": [
        { "src": "/api/.*", "dest": "/api/create-files.js" },
        { "src": "/(.*)", "dest": "/index.html" }
    ]
}
